@model SocialMedia.Models.UserProfileViewModel


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">Profil użytkownika</h1>

            <div class="card shadow-lg p-4 rounded">
                <div class="text-center">
                    <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="profile-img img-fluid rounded-circle border" />
                </div>
                <div class="mt-3">
                    <h3 class="text-center">@Model.Description</h3>
                    <p class="text-center text-muted">Opis użytkownika</p>

                    <div class="profile-info mt-4">
                        <p><strong>Lokalizacja:</strong> @Model.Location</p>
                        <p><strong>Hobby:</strong> @Model.Hobby</p>
                        <p><strong>Strona internetowa:</strong> <a href="@Model.Website" target="_blank">@Model.Website</a></p>
                    </div>

                    <div class="text-center mt-4">
                        <a class="btn btn-primary" asp-controller="UserProfile" asp-action="Edit">
                            Edytuj Profil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border: 5px solid #007bff;
        border-radius: 50%; 
    }

    .card {
        background-color: #f9f9f9;
        border-radius: 10px;
    }

    .card h3 {
        font-size: 24px;
        font-weight: 600;
    }

    .profile-info p {
        font-size: 18px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-weight: bold;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

</style>
